doi = {10.1007/s10980-016-0443-1},
isbn = {0921-2973 1572-9761},
issn = {15729761},
journal = {Landscape Ecology},
keywords = {Cross-scale interactions,Occupancy,Subpolar forest,Tree quality},
number = {2},
