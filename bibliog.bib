author = {Mikusi{\'{n}}ski, Grzegorz and Gromadzki, Maciej and Chylarecki, Przemyslaw},
doi = {10.1111/j.1523-1739.2001.99236.x},
issn = {0888-8892},
journal = {Conservation Biology},
month = {feb},
number = {1},
pages = {208--217},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Woodpeckers as Indicators of Forest Bird Diversity}},
url = {https://doi.org/10.1111/j.1523-1739.2001.99236.x},
