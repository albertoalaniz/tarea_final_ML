issn = {1754-5048},
journal = {Fungal Ecology},
keywords = {Cavity excavators and fungi,Fungal communities in excavations,Fungal communities in living trees,Red-cockaded woodpecker (),Wood decay fungi},
pages = {33--43},
title = {{Heart rot hotel: fungal communities in red-cockaded woodpecker excavations}},
